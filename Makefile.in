	$(shell rm /opt/rathena/bin/db)
	$(shell rm /opt/rathena/bin/conf)
	$(shell rm /opt/rathena/bin/npc)
	$(shell rm /opt/rathena/bin/log)
	$(shell rm -rf /opt/rathena/etc/rathena)
	$(shell rm -rf /opt/rathena/var/log/rathena)
